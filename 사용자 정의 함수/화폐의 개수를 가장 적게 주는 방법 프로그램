//화폐의 개수를 가장 적게 주는 방법 프로그램
#include <stdio.h>
//특정한 금액을 받아서 가장 적은 거스름 화폐의 개수를 구하는 함수
int smallest(int number)
{
  int count = 0;
  while(number >= 50000)
  {
    number -= 50000;
    count += 1;
  }
  while(number >= 10000)
  {
    number -= 10000;
    count += 1;
  }
  while(number >= 5000)
  {
    number -= 5000;
    count += 1;
  }
  while(number >= 1000)
  {
    number -= 1000;
    count += 1;
  }
  while(number >= 500)
  {
    number -= 500;
    count += 1;
  }
  while(number >= 100)
  {
    number -= 100;
    count += 1;
  }
  while(number >= 50)
  {
    number -= 50;
    count += 1;
  }
  while(number >= 10)
  {
    number -= 10;
    count += 1;
  }
  return count;
}

int main(void)
{
  int number;
  printf("금액을 입력하세요 : ");
  scanf("%d", &number);
  printf("최소로 쓸 수 있는 화폐의 개수는 %d 개 입니다.\n", smallest(number));
  return 0;
}
